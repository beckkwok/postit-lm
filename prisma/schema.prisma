// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Message {
  id        Int      @id @default(autoincrement())
  role      String
  content   String
  createdAt DateTime @default(now())
  cards     Card[]
}

model Card {
  id        Int     @id @default(autoincrement())
  title     String  @default("Index Card")
  content   String
  messageId Int?
  message   Message? @relation(fields: [messageId], references: [id])
  posX      Int
  posY      Int
  width     Int
  height    Int
  createdAt DateTime @default(now())
}